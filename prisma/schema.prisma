generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}
enum AwsType  {
  mega
  mini
  micro
}

model Role {
  id              Int @id  @default(autoincrement())
  name            String @unique
  description     String
  users User[]
}
model User {
  id              Int     @id @default(autoincrement())
  full_name       String?
  username        String  @unique
  email           String  @unique
  password        String  
  mobile_number   String  @unique
  aws_type        AwsType
  aws_date        DateTime?
  no_of_site      Int?

  role_id         Int
  role            Role @relation(fields: [role_id],references: [id])

  parent_id        Int?
  parent          User? @relation("SubUsers",fields: [parent_id],references: [id])
  sub_users       User[] @relation("SubUsers")

  status          String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}


